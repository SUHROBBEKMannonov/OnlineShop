@using OnlineShop.Models
@{
    ViewData["Title"] = "Home Page";
}
@model List<Products>
    
<br /> <br />

<div class="row">
    @foreach (var product in Model){

        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px; color:steelblue">@product.Name</label>
                    </h4>
                    <img src="~/@product.Image" alt="Card image" class="card-img-top" style="height:300px" />
                    <div class="card-header">
                        <div class="justify-content-between d-flex align-items-center">
                            <div class="btn-group"> 
                                <label style="font-size:20px; color:#a51313"><b>Price:  @product.Price $</b></label>
                            </div>
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@product.Id" class="btn btn-light pull-right btn-outline-info   ">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       
    }





</div>