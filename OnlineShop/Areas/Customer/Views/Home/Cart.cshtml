@using OnlineShop.Models
@model List<Products>
@{
	ViewData["Title"] = "Cart";
}
<h1> Your Cart Page</h1>

<div class="row">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Image</th>
				<th>Name</th>
				<th>Price</th>
				<th>Product type</th>
				<th>Color</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model){
				<tr>
					<td><img src="~/@item.Image" style="width:200px; height:150px" /></td>
					<td>@item.Name</td>
					<td>@item.Price</td>
					<td>@item.ProductTypes.ProductType.ToString()</td>
					<td>@item.Name</td>
					<td>@item.ProductColor</td>
					<td>
						<a asp-controller="Home" asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>

				</tr>
			}		
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-6"> 
		<a asp-action="Index" asp-controller="Home" class="btn btn-outline-light pull-right"> Back to Home</a>
	</div>
	<div class="col-6 text-right">
		<h3>Total Amount</h3>
		<h3>Grent total: @Model.Sum(c=>c.Price)</h3>
	</div>
</div>